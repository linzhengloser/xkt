<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        android:id="@+id/sv_root"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

        <TextView
                android:id="@+id/tv_type"
                android:layout_width="43dp"
                android:layout_height="16dp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="20dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:gravity="center"
                android:textSize="12sp"
                tools:background="@drawable/shape_question_judgment"
                android:textColor="#ffffff"
                tools:text="判断题"
                />

        <ImageView
                android:id="@+id/iv_is_right"
                android:visibility="gone"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_marginTop="25dp"
                app:layout_constraintLeft_toLeftOf="@id/tv_type"
                app:layout_constraintTop_toBottomOf="@id/tv_type"
                android:src="@drawable/question_right"/>

        <TextView
                android:id="@+id/tv_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="25dp"
                android:paddingRight="30dp"
                app:layout_constraintLeft_toRightOf="@id/iv_is_right"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_type"
                android:textSize="16sp"
                android:lineSpacingExtra="10dp"
                android:textColor="#262a3b"
                tools:text="泡沫灭火器可用于带电灭火？泡沫灭火器可用于dp带电灭火泡沫灭火器可用于带电灭火泡沫灭火器可用于带电灭火"/>

        <LinearLayout
                android:id="@+id/ll_options"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="23dp"
                app:layout_constraintLeft_toLeftOf="@id/tv_content"
                app:layout_constraintTop_toBottomOf="@id/tv_content"
                android:orientation="vertical">

        </LinearLayout>

        <TextView
                android:id="@+id/tv_view_answer"
                android:layout_width="80dp"
                android:layout_height="24dp"
                android:layout_marginTop="58dp"
                app:layout_constraintLeft_toLeftOf="@id/iv_is_right"
                app:layout_constraintTop_toBottomOf="@id/ll_options"
                android:gravity="center"
                android:background="@drawable/shape_question_view_answer_press"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:text="查看答案"/>


        <TextView
                android:id="@+id/tv_success_answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                app:layout_constraintLeft_toLeftOf="@id/tv_view_answer"
                app:layout_constraintTop_toBottomOf="@id/tv_view_answer"
                android:textSize="16sp"
                android:textColor="#262a3b"
                android:text="正确答案：A"/>

        <TextView
                android:id="@+id/tv_answer_resolve"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="38dp"
                android:layout_marginTop="10dp"
                android:paddingBottom="10dp"
                app:layout_constraintLeft_toLeftOf="@id/tv_success_answer"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_success_answer"
                android:textSize="16sp"
                android:lineSpacingExtra="10dp"
                android:textColor="#262a3b"
                tools:text="答案解析：巴拉巴拉巴拉巴拉巴拉巴拉巴拉巴拉巴拉巴拉巴拉巴拉巴拉巴拉巴拉巴拉巴拉巴拉巴拉巴拉巴拉巴拉巴拉巴拉巴拉巴拉巴拉巴拉巴拉巴拉巴拉巴拉巴拉巴拉巴拉巴拉巴拉巴拉巴拉巴拉"/>


    </android.support.constraint.ConstraintLayout>


</ScrollView>
