<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@drawable/shape_dialog_share"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:paddingTop="22dp"
        android:layout_width="300dp"
        android:layout_height="182dp">


    <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="请选择分享平台"
            android:textSize="20sp"
            android:textColor="#262a3b"/>


    <View
            android:id="@+id/v_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/itemDividerColor"
            android:layout_marginTop="22dp"
            app:layout_constraintTop_toBottomOf="@id/tv_title"/>

    <ImageView
            android:id="@+id/iv_login_qq"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="19dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/iv_login_wechat"
            app:layout_constraintTop_toBottomOf="@id/v_divider"
            android:src="@drawable/login_qq"/>

    <ImageView
            android:id="@+id/iv_login_wechat"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintLeft_toRightOf="@id/iv_login_qq"
            app:layout_constraintRight_toLeftOf="@id/iv_login_sina"
            app:layout_constraintTop_toTopOf="@id/iv_login_qq"
            android:src="@drawable/login_wechat"/>

    <ImageView
            android:id="@+id/iv_login_sina"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintLeft_toRightOf="@id/iv_login_wechat"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_login_qq"
            android:src="@drawable/login_sina"/>




</android.support.constraint.ConstraintLayout>