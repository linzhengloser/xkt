<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="107dp"
            android:layout_height="107dp"
            android:layout_marginTop="78dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@mipmap/ic_launcher"
            />

    <EditText
            android:id="@+id/et_phone"
            android:layout_width="273dp"
            android:layout_height="54dp"
            android:layout_marginTop="66dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_logo"
            android:background="@drawable/shape_edit_text_bg"
            android:inputType="phone"
            android:drawablePadding="18dp"
            android:textSize="16sp"
            android:drawableLeft="@drawable/login_phone"
            android:textColorHint="#bfbfbf"
            android:textColor="#bfbfbf"
            android:hint="请输入手机号"
            />


    <FrameLayout
            android:id="@+id/fl_pwd"
            android:layout_width="273dp"
            android:layout_height="54dp"
            android:layout_marginTop="15dp"
            android:paddingLeft="15dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_phone"
            android:background="@drawable/shape_edit_text_bg"
            android:paddingRight="13dp"
            >

        <EditText
                android:id="@+id/et_pwd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingRight="110dp"
                android:background="@color/transparency"
                android:inputType="textPassword"
                android:drawablePadding="18dp"
                android:textSize="16sp"
                android:drawableLeft="@drawable/login_pwd"
                android:textColorHint="#bfbfbf"
                android:textColor="#bfbfbf"
                android:hint="请输入密码"
                />


        <TextView
                android:id="@+id/tv_forget_pwd"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:textColor="@color/bluePrimary"
                android:text="忘记密码"
                />

    </FrameLayout>

    <TextView
            android:id="@+id/tv_login"
            android:layout_width="273dp"
            android:layout_height="54dp"
            android:layout_marginTop="34dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fl_pwd"
            android:gravity="center"
            android:background="@drawable/shape_login"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:text="登录"/>


    <TextView
            android:id="@+id/tv_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_login"
            android:text="还有没有账号？注册"
            />


    <ImageView
            android:id="@+id/iv_login_qq"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="48dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/iv_login_wechat"
            app:layout_constraintTop_toBottomOf="@id/tv_register"
            android:src="@drawable/login_qq"/>

    <ImageView
            android:id="@+id/iv_login_wechat"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="48dp"
            app:layout_constraintLeft_toRightOf="@id/iv_login_qq"
            app:layout_constraintRight_toLeftOf="@id/iv_login_sina"
            app:layout_constraintTop_toBottomOf="@id/tv_register"
            android:src="@drawable/login_wechat"/>

    <ImageView
            android:id="@+id/iv_login_sina"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="48dp"
            app:layout_constraintLeft_toRightOf="@id/iv_login_wechat"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_register"
            android:src="@drawable/login_sina"/>


</android.support.constraint.ConstraintLayout>
