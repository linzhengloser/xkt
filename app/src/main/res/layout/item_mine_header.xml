<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="294dp"
        android:orientation="vertical">

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="147dp"
            android:background="#4e9afd">


        <LinearLayout
                android:id="@+id/ll_avatar_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:gravity="center_horizontal">


            <ImageView
                    android:id="@+id/iv_avatar"
                    android:layout_width="67dp"
                    android:layout_height="67dp"
                    android:src="@mipmap/ic_launcher"/>


            <TextView
                    android:id="@+id/tv_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    tools:text="小鸡炖蘑菇"/>


        </LinearLayout>


    </FrameLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:paddingLeft="17dp"
            android:paddingRight="17dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="#71aefd">


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:drawablePadding="7dp"
                android:drawableLeft="@drawable/mine_expired"
                android:textColor="@color/white"
                android:text="初级/已到期：2018-08-26"/>

        <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:drawablePadding="7dp"
                android:drawableLeft="@drawable/mine_expired"
                android:textColor="@color/white"
                android:text="高级/到期：2018-08-26"/>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

        <FrameLayout
                android:id="@+id/fl_schedule"
                android:tag="schedule"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                <ImageView
                        android:layout_width="22dp"
                        android:layout_height="24dp"
                        android:src="@drawable/mine_schedule_normal"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:textSize="13sp"
                        android:textColor="#999999"
                        android:text="速度"/>

            </LinearLayout>

        </FrameLayout>

        <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                <ImageView
                        android:layout_width="22dp"
                        android:layout_height="24dp"
                        android:src="@drawable/mine_error_question_normal"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:textSize="13sp"
                        android:textColor="#999999"
                        android:text="错题"/>

            </LinearLayout>

        </FrameLayout>

        <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                <ImageView
                        android:layout_width="22dp"
                        android:layout_height="24dp"
                        android:src="@drawable/mine_collection_normal"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:textSize="13sp"
                        android:textColor="#999999"
                        android:text="收藏"/>

            </LinearLayout>

        </FrameLayout>

        <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                <ImageView
                        android:layout_width="22dp"
                        android:layout_height="24dp"
                        android:src="@drawable/mine_achievement_normal"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:textSize="13sp"
                        android:textColor="#999999"
                        android:text="成绩"/>

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f5f5f5"/>

</LinearLayout>
