<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <include
            android:id="@+id/layout_title"
            layout="@layout/layout_title"
            />


    <LinearLayout
            android:id="@+id/ll_message_notify"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            app:layout_constraintTop_toBottomOf="@id/layout_title"
            android:gravity="center_vertical"
            android:orientation="horizontal">

        <TextView
                android:textSize="16sp"
                android:text="消息提醒"
                android:textColor="#262a3b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        
        <ImageView
                android:layout_width="7dp"
                android:layout_height="13dp"
                android:src="@drawable/mine_arrow"
                />
        
        
    </LinearLayout>

    <LinearLayout
            android:id="@+id/ll_modify_pwd"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            app:layout_constraintTop_toBottomOf="@id/ll_message_notify"
            android:gravity="center_vertical"
            android:orientation="horizontal">

        <TextView
                android:textSize="16sp"
                android:text="修改密码"
                android:textColor="#262a3b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

        <ImageView
                android:layout_width="7dp"
                android:layout_height="13dp"
                android:src="@drawable/mine_arrow"
                />


    </LinearLayout>

    <LinearLayout
            android:id="@+id/ll_clear_cache"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            app:layout_constraintTop_toBottomOf="@id/ll_modify_pwd"
            android:gravity="center_vertical"
            android:orientation="horizontal">

        <TextView
                android:textSize="16sp"
                android:text="清除缓存"
                android:textColor="#262a3b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

        <TextView
                android:id="@+id/tv_cache_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100MB"
                android:textSize="16sp"
                android:textColor="#999999"/>


    </LinearLayout>

    <LinearLayout
            android:id="@+id/ll_about_us"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            app:layout_constraintTop_toBottomOf="@id/ll_clear_cache"
            android:gravity="center_vertical"
            android:orientation="horizontal">

        <TextView
                android:textSize="16sp"
                android:text="关于我们"
                android:textColor="#262a3b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

        <ImageView
                android:layout_width="7dp"
                android:layout_height="13dp"
                android:src="@drawable/mine_arrow"
                />


    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/itemDividerColor"
            app:layout_constraintBottom_toBottomOf="@id/ll_message_notify"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/itemDividerColor"
            app:layout_constraintBottom_toBottomOf="@id/ll_modify_pwd"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/itemDividerColor"
            app:layout_constraintBottom_toBottomOf="@id/ll_clear_cache"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/itemDividerColor"
            app:layout_constraintBottom_toBottomOf="@id/ll_about_us"/>


    <TextView
            android:layout_width="273dp"
            android:layout_height="53dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:text="退出登录"
            android:background="@drawable/shape_setting_exit_login"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll_about_us"
            android:layout_marginTop="105dp"/>


</android.support.constraint.ConstraintLayout>