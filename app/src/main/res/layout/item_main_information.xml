<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    
    
    <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:layout_marginRight="24dp"
            app:layout_constraintRight_toLeftOf="@id/iv_cover"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_cover"
            android:layout_marginTop="4dp"
            tools:text="预防特重大火灾事故的发送，消防依法处理"/>
    
    <ImageView
            android:id="@+id/iv_cover"
            android:layout_width="150dp"
            android:layout_height="86dp"
            tools:src="@drawable/main_information_cover"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="16dp"/>


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="#999999"
            android:text="收费资讯"
            android:drawableLeft="@drawable/main_information_toll"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/iv_cover"
            />

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/itemDividerColor"
            app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>